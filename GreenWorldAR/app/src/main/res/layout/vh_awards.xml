<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/vh_awards_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/profile_picture_image_border"
        />

    <TextView
        android:id="@+id/vh_awards_awardname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Long Walker - 100,000 steps taken in a day"
        android:layout_toRightOf="@+id/vh_awards_imageview"
        android:layout_toLeftOf="@+id/vh_awards_points"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/colorBlackFont"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/vh_awards_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+150p"
        android:textColor="@color/moneyGreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:paddingEnd="8dp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>