<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/forestGreen"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/buildmenu_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_white_back_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/actionBarItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="GreenWorldAR"
            android:textSize="11sp"
            android:paddingRight="16dp"
            android:textStyle="bold"
            android:gravity="fill"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/buildmenu_build_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_hammer_white"
            android:layout_gravity="end"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/actionBarItemBackground"/>


    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fraghome_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorWhite"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="@color/colorWhite"
        app:tabTextAppearance="@style/MailTabLayoutTextStyle"
        android:background="@color/forestGreen"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fraghome_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>








</LinearLayout>